{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd faq-backend && python -m ensurepip --upgrade && python -m pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd faq-backend && python railway_start.py",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
